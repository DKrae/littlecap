{
    "name": "littlecap",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5",
        "@sap/hana-client": "^2.10.13",
        "@sap/hdbext": "^7.3.1",
        "@sap/hdi-deploy": "^4.2.0",
        "express": "^4",
        "hdb": "^0.18.3",
        "sap-hdbext-promisfied": "^2.202108.3"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.90.12",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "cds run",
        "hana": "node node_modules/@sap/hdi-deploy/deploy.js --root ./gen/db --auto-undeploy --exit",
        "undeploy": "cf undeploy littlecap --delete-services --delete-service-keys"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "hana"
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    },
    "sapux": [
        "app/sapleui5"
    ]
}
