<mvc:View
    controllerName="sapleui5.controller.SampleView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
	xmlns:semantic="sap.m.semantic"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<semantic:SemanticPage id="page" title="{i18n>title}">
					<semantic:content>
						<Panel
							headerText="{i18n>PanelTitle}"
							class="sapUiResponsiveMargin"
							width="auto">
							<content>
								<!--<Form id="Submit" binding="{/callStoredProc(...)}">-->
								<Button id="btn_test"
									text="{i18n>showHelloButtonText}"
									press=".onShowHello"
									class="sapUiSmallMarginEnd"
									binding="/callStoredProc(...)"/>
								<!--</Form>-->
							</content>
						</Panel>
					</semantic:content>
				</semantic:SemanticPage>
			</pages>
		</App>
	</Shell>
</mvc:View>
